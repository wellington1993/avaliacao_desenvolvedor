<p id="notice"><%= notice %></p>

<div class="table-responsive">
<table class="table table-dark table-hover table-striped table-bordered table-sm align-middle caption-top">
  <caption>List of Sales</caption>
  <thead>
    <tr>
      <th scope="col">Customer</th>
      <th scope="col">Product</th>
      <th scope="col">Unit Price</th>
      <th scope="col">Vendor</th>
      <th scope="col">Quantity</th>
      <th scope="col">Total</th>
      <th colspan="3" scope="col"></th>
    </tr>
  </thead>

  <tbody>
    <% total = 0 # TODO: Refatorar... %>
    <% @sales.each do |sale| %>
      <% total += sale.total %>
      <tr>
        <td><%= sale.customer.name %></td>
        <td><%= sale.product.description %></td>
        <td><%= sale.product.price %></td>
        <td><%= sale.vendor.name %></td>
        <td><%= sale.quantity %></td>
	<td><%= "R$ #{sale.total}" %></td>
        <td><%= link_to 'Show', sale %></td>
        <td><%= link_to 'Edit', edit_sale_path(sale) %></td>
        <td><%= link_to 'Destroy', sale, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
<b><%= "Total de vendas: R$ #{total}" %></b>

<br>

<h3>Import Sales</h3>
<%= form_tag import_sales_path, multipart: true do %>
  <%= file_field_tag :file %>
  <%= submit_tag 'Upload Sales' %>
<% end %>

<%= link_to 'New Sale', new_sale_path %>

