<p id="notice"><%= notice %></p>

<h1>Sales</h1>

<table>
  <thead>
    <tr>
      <th>Custumer</th>
      <th>Product</th>
      <th>Unit Price</th>
      <th>Vendor</th>
      <th>Quantity</th>
      <th>Total</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @sales.each do |sale| %>
      <tr>
        <td><%= sale.custumer.name %></td>
        <td><%= sale.product.description %></td>
        <td><%= sale.product.price %></td>
        <td><%= sale.vendor.name %></td>
        <td><%= sale.quantity %></td>
	<td><%= "R$ #{sale.total}" %></td>
        <td><%= link_to 'Show', sale %></td>
        <td><%= link_to 'Edit', edit_sale_path(sale) %></td>
        <td><%= link_to 'Destroy', sale, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

